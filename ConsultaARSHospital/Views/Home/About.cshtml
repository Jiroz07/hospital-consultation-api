

@model IEnumerable<ConsultaARSHospital.Hospitales>

@{
    ViewBag.Title = "Centros Hospitalarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Centros Hospitalarios</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre del Hospital</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hospital in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => hospital.nombre_hospital)</td>
                    <td>@Html.DisplayFor(modelItem => hospital.direccion)</td>
                    <td>@Html.DisplayFor(modelItem => hospital.telefono)</td>

                    <td>
                        <div class="btn-group" role="group" aria-label="Opciones">
                            @using (Html.BeginForm("IndexDoctores", "Home", new { idHospital = hospital.id_hospital }, FormMethod.Post))
                            {
                                <button type="submit" class="btn btn-success">Seleccionar</button>
                            }


                            @Html.ActionLink("Editar", "EditarHospitales", new { id = hospital.id_hospital }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Eliminar", "EliminarHospitales", new { id = hospital.id_hospital }, new { @class = "btn btn-danger" })
                            @Html.ActionLink("Detalles", "DetallesHospitales", new { id = hospital.id_hospital }, new { @class = "btn btn-info btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron hospitales.</p>
}



@Html.ActionLink("Crear Nuevo Hospital", "CrearHospitales", null, new { @class = "btn btn-primary" })