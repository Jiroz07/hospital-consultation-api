@model ConsultaARSHospital.Especialidades

@{
    ViewBag.Title = "Editar Especialidad";
}

<h2>Editar Doctor</h2>

@using (Html.BeginForm("EditarEspecialidades", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.id_especialidad)

    <div class="form-group">
        @Html.LabelFor(model => model.nombre_especialidad);
        @Html.TextBoxFor(model => model.nombre_especialidad, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.descripcion)
        @Html.TextBoxFor(model => model.descripcion, new { @class = "form-control" })
    </div>

    

    <div class="form-group">
        @Html.LabelFor(model => model.id_doctor)
        @Html.TextBoxFor(model => model.id_doctor, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
}