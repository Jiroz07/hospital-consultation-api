@using ConsultaARSHospital.Models
@model IEnumerable<ConsultaARSHospital.Models.Hospitales>

@{
    ViewBag.Title = "Seleccionar Hospital";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Seleccionar Hospital</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Lista de Hospitales</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var hospitales in Model)
                    {
                        <tr>
                            <td>@hospitales.NombreHospital</td>
                            <td>@hospitales.Direccion</td>
                            <td>
                                @Html.ActionLink("Seleccionar", "Seleccionar", new { id = hospitales.IdHospital }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>