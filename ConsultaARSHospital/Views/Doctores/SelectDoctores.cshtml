@model IEnumerable<ConsultaARSHospital.Models.Doctores>

@{
    ViewBag.Title = "Seleccionar Doctor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Seleccionar Doctor</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Lista de Doctores</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doctores in Model)
                    {
                        <tr>
                            <td>@doctores.Nombre</td>
                            <td>@doctores.Apellido</td>
                            <td>@doctores.Email</td>
                            <td>@doctores.Telefono</td>
                            <td>
                                @Html.ActionLink("Seleccionar", "SeleccionarDoctor", new { idDoctor = doctores.IdDoctor }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>